// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum ProjectStatus {
  DRAFT
  ANALYZED
  COMPLETED
  FAILED
}

enum OptimizationStatus {
  PENDING
  APPROVED
  REJECTED
  REFINED
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  passwordHash  String
  name          String?
  avatarUrl     String?
  skillLevel    SkillLevel  @default(BEGINNER)
  projects      Project[]
  comments      Comment[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Project {
  id              String          @id @default(cuid())
  userId          String
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  name            String
  description     String?
  status          ProjectStatus   @default(DRAFT)
  pages           Page[]
  comments        Comment[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@index([userId])
}

model Page {
  id              String          @id @default(cuid())
  projectId       String
  project         Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  name            String
  order           Int             @default(0)
  canvasData      String?         // JSON stored as text
  optimizations   Optimization[]
  comments        Comment[]
  sourceImageUrl  String?         // URL to original design screenshot
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@index([projectId])
  @@index([projectId, order])
}

model Optimization {
  id                String              @id @default(cuid())
  pageId            String
  page              Page                @relation(fields: [pageId], references: [id], onDelete: Cascade)
  originalDesign    String              // JSON stored as text
  optimizedDesign   String?             // JSON stored as text
  suggestions       String?             // JSON array stored as text
  userFeedback      String?             // JSON stored as text
  status            OptimizationStatus  @default(PENDING)
  aiAnalysis        String?             // Text analysis from AI
  qualityScore      Int?                // 0-100
  generatedCode     String?             // JSON stored as text
  refinements       Refinement[]
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  @@index([pageId])
  @@index([status])
}

model Refinement {
  id                String          @id @default(cuid())
  optimizationId    String
  optimization      Optimization    @relation(fields: [optimizationId], references: [id], onDelete: Cascade)
  feedback          String          // User feedback text
  category          String          // layout, typography, etc.
  refinedDesign     String          // JSON stored as text
  aiExplanation     String?         // AI's explanation for changes
  changes           String?         // JSON array of changes
  createdAt         DateTime        @default(now())

  @@index([optimizationId])
}

// Legacy models (kept for backward compatibility)
model Element {
  id              String   @id @default(cuid())
  projectId       String
  type            String
  properties      String   // JSON stored as text
  positionX       Float
  positionY       Float
  width           Float
  height          Float
  sourceImageUrl  String?
  createdAt       DateTime @default(now())
}

model GeneratedCode {
  id            String   @id @default(cuid())
  projectId     String
  framework     String
  codeContent   String
  createdAt     DateTime @default(now())
}

model Comment {
  id              String    @id @default(cuid())
  projectId       String
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  pageId          String?
  page            Page?     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  content         String
  positionX       Float?
  positionY       Float?
  isResolved      Boolean   @default(false)
  parentId        String?
  parent          Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies         Comment[] @relation("CommentReplies")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([projectId])
  @@index([pageId])
  @@index([userId])
}
