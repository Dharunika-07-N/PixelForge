generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum ProjectStatus {
  DRAFT
  ANALYZED
  COMPLETED
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  passwordHash  String
  name          String?
  avatarUrl     String?
  skillLevel    SkillLevel  @default(BEGINNER)
  projects      Project[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Project {
  id              String          @id @default(cuid())
  userId          String
  user            User            @relation(fields: [userId], references: [id])
  name            String
  description     String?
  canvasData      Json?           // JSONB
  analysisResult  Json?           // JSONB
  status          ProjectStatus   @default(DRAFT)
  elements        Element[]
  generatedCodes  GeneratedCode[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

model Element {
  id              String   @id @default(cuid())
  projectId       String
  project         Project  @relation(fields: [projectId], references: [id])
  type            String
  properties      Json     // JSONB
  positionX       Float
  positionY       Float
  width           Float
  height          Float
  sourceImageUrl  String?
  createdAt       DateTime @default(now())
}

model GeneratedCode {
  id            String   @id @default(cuid())
  projectId     String
  project       Project  @relation(fields: [projectId], references: [id])
  framework     String
  codeContent   String
  createdAt     DateTime @default(now())
}
